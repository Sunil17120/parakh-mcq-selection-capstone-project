# --- STAGE 1: Build Stage (Optimized for faster rebuilds) ---
FROM python:3.11-slim as builder

# Set up environment variables
ENV PYTHONUNBUFFERED 1
ENV PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# Create and set working directory
WORKDIR /app

# Install necessary system dependencies for PostgreSQL driver (psycopg2-binary relies on libpq-dev)
RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc libpq-dev && \
    rm -rf /var/lib/apt/lists/*

# Install Python dependencies (from requirements.txt)
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# --- STAGE 2: Final/Runtime Stage (Slimmer image for production) ---
FROM python:3.11-slim

# Copy the environment setup and installed packages from the builder stage
WORKDIR /app
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin
COPY --from=builder /lib /lib
COPY --from=builder /usr/lib /usr/lib

# Copy remaining application code, configuration, and ML artifacts
COPY . /app

# Port that Gunicorn listens on
EXPOSE 8000

# Command to run the application using Gunicorn (uses gunicorn_conf.py)
CMD ["gunicorn", "-c", "gunicorn_conf.py", "main:app"]